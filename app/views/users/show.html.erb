<h1 align="center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= gravatar_for @user, size: 150 %>
	</div>
</div>
<br>
<div class="row">
	<div class="well col-md-4 col-md-offset-4">
		<table class="user_info_table">
			<tr>
				<td class="user_caption">Name: </td>
				<td class="user_data"><%= @user.fname + ' ' + @user.lname %></td>
			</tr>
			<tr>
				<td class="user_caption">Username: </td>
				<td class="user_data"><%= @user.username %></td>
			</tr>
			<tr>
				<td class="user_caption">Email: </td>
				<td class="user_data"><%= @user.email %></td>
			</tr>
		</table>
	</div>
</div>

<h4 align="center"><%= @user.username %>'s events</h4>

<% if @user.events.count > 0 %>

<div class="center">
	<%= will_paginate @user_events %>
</div>

<%= render 'events/event', obj: @user_events %>

<div class="center">
	<%= will_paginate @user_events %>
</div>

<% else %>

<div class="center">
Currently the user has no events
</div>

<% end %>