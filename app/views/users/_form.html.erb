<%= render 'shared/errors', obj: @user %>

<div>

  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :"First Name" %>
    </div>

    <div class="col-sm-3">
      <%= f.text_field :fname, class: "form-control", placeholder: "First name", autofocus: true %>
    </div>

    <div class="control-label col-sm-2">
      <%= f.label :"Last Name" %>
    </div>

    <div class="col-sm-3">
      <%= f.text_field :lname, class: "form-control", placeholder: "Last name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :username %>
    </div>

    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>

    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>

    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
    </div>
  </div>

  <% end %>
</div>

<div align="center">
  [ <%= link_to "Already a member go to Log in page", login_path %> ]
</div>