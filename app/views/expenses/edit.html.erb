<h1 align="center">Edit existing Expense</h1>

<%= render 'shared/errors', obj: @expense %>

<div class='row'>

  <div class='col-xs-12'>
    <%= form_for(@expense, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Expense", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :value %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :value, class: "form-control", placeholder: "Expense amount" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :task %>
      </div>
      <div class="col-sm-8">
        <%= f.select :task_id, options_for_select([[@expense.task.title, @expense.task.id]]) %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
    
  </div>
</div>

<div align="center">
  [ <%= link_to "Cancel request and return to my expenses listing", user_expenses_path(current_user) %> ]
</div>